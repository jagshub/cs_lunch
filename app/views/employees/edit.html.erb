
<main>
  <section class="py-5  container">
    <div class="row py-lg-5">
        <%= form_with model: @employee do |form| %>
        <div class="form-group">
          <p><%= form.label :id %>
            <%= form.text_field :id %></p>
          <p><%= form.label :name %>
          <%= form.text_field :name %></p>
          <p><%= form.label :image%>
            <%= form.file_field :image, accept: 'image/png, image/gif, image/jpeg' %></p>
          <p><%= form.submit "SUBMIT" %></p>
        </div>
        <% end %>
    </div>
  </section>
</main>